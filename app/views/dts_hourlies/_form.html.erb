        format: "yyyy-mm-dd",
        weekStart: 1,
        maxViewMode: 2,
        todayBtn: "linked",
        language: "en-GB",
        daysOfWeekHighlighted: "0,6",
        calendarWeeks: true,
        autoclose: true,
        todayHighlight: true
    });
    $("#dts_hourly_datestring").value();
  </script>
