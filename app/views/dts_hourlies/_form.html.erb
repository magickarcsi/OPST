<%= form_for @dts_hourly, :html => { :class => "form-horizontal dts_hourly" } do |f| %>

  <% if @dts_hourly.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@dts_hourly.errors.count, "error") %> prohibited this dts_hourly from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @dts_hourly.errors.full_messages.each do |msg| %>
