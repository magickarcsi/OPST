<%- model_class = Name -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-hover table-responsive" style="font-size: small;">
  <thead>
    <tr>
      <th>Name</th>
      <th><%= model_class.human_attribute_name(:store) %></th>
      <th><%= model_class.human_attribute_name(:personId) %></th>
      <th><%= model_class.human_attribute_name(:nameid) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% if defined?(@names) %>
    <% @names.each do |name| %>
      <tr>
        <td><%= link_to "#{name.firstname} #{name.lastname}", name_path(name) %></td>
        
        <td><%= name.store %></td>
        <td><%= name.personId %></td>
        <td><%= name.nameid %></td>
        <td><%= name.active %></td>
        
        
        <td>
          <div class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Actions<span class="caret"></span></a>
          <ul class="dropdown-menu">
            
                <li><%= link_to t('.show', :default => t("helpers.links.show")),
                      name_path(name) %></li>
                <li><%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_name_path(name) %></li>
                
                <li role="separator" class="divider"></li>
                <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      name_path(name),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "Are you sure you want to delete #{name.firstname}, #{name.lastname}?")) }, :disable_with => "Loading...", :class => 'bg-warning text-black' %>  
                </li>
                <li><%= link_to t('.generate_new_password_email', :default => t("helpers.links.resetpassword")),
                      name_path(name),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "Are you sure you want to delete #{name.firstname}, #{name.lastname}?")) }, :disable_with => "Loading...", :class => 'bg-warning text-black' %>  
                </li>
            </ul>
          </div>
          
          
          
        </td>
      </tr>
    <% end %>
    <% end %>
    <% if defined?(@name) %>
    <tr>
        <td><%= link_to "#{@name.firstname} #{@name.lastname}", name_path(@name) %></td>
        
        <td><%= @name.store %></td>
        <td><%= @name.personId %></td>
        <td><%= @name.nameid %></td>
        <td><%= @name.active %></td>
        
        
        <td>
          <div class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Actions<span class="caret"></span></a>
          <ul class="dropdown-menu">
            
                <li><%= link_to t('.show', :default => t("helpers.links.show")),
                      name_path(@name) %></li>
                <li><%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_name_path(@name) %></li>
                <% if current_person.try(:admin?) %>
                <li role="separator" class="divider"></li>
                <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      name_path(@name),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "Are you sure you want to delete #{@name.firstname}, #{@name.lastname}?")) },
                      :disable_with => "Loading...",
                      :class => 'bg-danger text-black' %>  
                </li>
                <li><%= link_to t('.generate_new_password_email', :default => t("helpers.links.resetpassword")),
                      name_path(@name),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "Are you sure you want to delete #{@name.firstname}, #{@name.lastname}?")) },
                      :disable_with => "Loading...",
                      :class => 'bg-warning text-black' %>  
                </li>
                <% end %>
            </ul>
          </div>
          
          
          
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
<% if current_person.try(:admin?) %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_name_path,
            :class => 'btn btn-default' %>
<% end %>