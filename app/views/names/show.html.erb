
<%- model_class = Name -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<%= flash_messages %>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @name.firstname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastname) %>:</strong></dt>
  <dd><%= @name.lastname %></dd>
  
  <dt><strong><%= model_class.human_attribute_name(:store) %>:</strong></dt>
  <dd><%= @name.store %></dd>
  <dt><strong><%= model_class.human_attribute_name(:personId) %>:</strong></dt>
  <dd><%= @name.personId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nameid) %>:</strong></dt>
  <dd><%= @name.nameid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @name.active %></dd>
  
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              names_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_name_path(@name), :class => 'btn btn-default' %>
<% if current_person.try(:admin?) %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              name_path(@name),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>